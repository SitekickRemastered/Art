package com.digitalcrafts.media{		import flash.events.Event;	import flash.media.Sound;	import flash.media.SoundChannel;	import flash.media.SoundTransform;		public class SoundMedia extends Media	{				private var _channel:SoundChannel;		private var _sound:Sound;		private var _xform:SoundTransform;				public function SoundMedia($name:String, $sound:Sound = null, $channel:SoundChannel = null, $completeFunction:Function = null)		{			super($name, $completeFunction);			if($sound){				_sound = $sound;			}else{				_sound = new Sound();			}			//_sound.addEventListener(Event.SOUND_COMPLETE, onComplete);			if($channel){				_channel = $channel;			}else{				_channel = new SoundChannel();			}			_xform = new SoundTransform();		}				public function get sound():Sound		{			return _sound;		}		public function set channel($channel:SoundChannel):void{			_channel = $channel;		}		public function get channel():SoundChannel		{			return _channel;		}		public function play($startTime:Number = 0, $loops:int = 0, $sndTransform:SoundTransform = null):SoundChannel{			if(_sound != null){				isPlaying = true;				_channel = _sound.play($startTime, $loops, $sndTransform);				if(_channel){					_channel.addEventListener(Event.SOUND_COMPLETE, onComplete);					_channel.soundTransform = _xform;				}			}			return _channel;		}		public function stop():void{			isPlaying = false;			_channel.stop();		}		public function set vol($vol:Number):void{			_xform.volume = $vol;		}	}}